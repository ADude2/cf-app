<section>  
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Log In</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'sky-form boxed' }) do |f| %>
          <%= f.error_notification %>
          <div class="panel-body">
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-md' } %>
            <%= f.input :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'input-md' } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: 'btn-md btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>