<section>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-light margin-top50 margin-bottom50">

        <div class="panel-heading">
          <h3 class="panel-title bold text-center"> Create Your Account</h3>
        </div>
        
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <%= f.input :user_name, required: true, autofocus: true, label: false, placeholder: '&#xf007;  User Name'.html_safe %>
              <%= f.input :email, required: true, label: false, placeholder: '&#xf0e0;  Email'.html_safe %>
              <%= f.input :password, required: true, label: false, placeholder: '&#xf023;  Password'.html_safe %>
              <%= f.input :password_confirmation, required: true, label: false, placeholder: '&#xf023;  Confirm Password'.html_safe %>
              <div class="text-center">
                <%= f.button :submit, "Sign Up", class: 'btn-md btn-primary' %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>