<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="log-in panel">
        <div class="panel-title">
          <h2>Create Your Account</h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="panel-body">
            <%= f.input :user_name, required: true, autofocus: true, label: false, placeholder: 'User Name', input_html: { class: 'input-md' } %>
            <%= f.input :email, required: true, label: false, placeholder: 'Email', input_html: { class: 'input-md' } %>
            <%= f.input :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'input-md' } %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm Password', input_html: { class: 'input-md' } %>
            <%= f.button :submit, "Sign Up", class: 'btn-md btn-info btn-block' %>
          </div>
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
