<section class="margin-top50 margin-bottom50">
  <div class="container text-center">
    <div class="col-md-8 col-md-offset-2">    
      <h1>Index</h1>
      <p>CF Box Reviews!</p>

      <%= form_tag gyms_path, method: "get" do %>

        <div class="search form-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "&#xf002; Find a Box by Name, City or Country".html_safe %>
        </div>
        <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</section>

<%= render :partial => 'welcome/callout' %>
<%= render :partial => 'welcome/features' %>