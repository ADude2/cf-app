<h1>Index</h1>
<p>CF Box Reviews!</p>

<%= link_to "List of CF Boxes", gyms_path %>

<%= form_tag gyms_path, method: "get" do %>

  <div class="form-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Find a Box by Name, City or Country" %>
  </div>
  <%= submit_tag "Search", name: nil, class: "btn btn-success" %>

<% end %>